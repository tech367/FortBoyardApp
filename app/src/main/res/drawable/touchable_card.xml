<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#2B2D30"></solid>
            <corners android:radius="5dp"></corners>
            <padding android:bottom="5dp" android:left="10dp" android:top="5dp"></padding>
            <stroke android:width="2dp" android:color="#C44ED8"></stroke>
        </shape>
    </item>

    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="#2B2D30"></solid>
            <corners android:radius="5dp"></corners>
            <padding android:bottom="5dp" android:left="10dp" android:top="5dp"></padding>
            <stroke android:width="2dp" android:color="#FFFFFF"></stroke>
        </shape>
    </item>

</selector>