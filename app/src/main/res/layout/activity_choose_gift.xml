<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".ChooseGiftActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/custom_card"
        android:backgroundTint="@color/light_grey">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Выберите бонус"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/additional_time_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView19"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/grey"
            android:clickable="true"
            app:cardCornerRadius="10dp"
            app:strokeColor="@color/grey"
            app:strokeWidth="2dp">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:padding="20dp"
                app:srcCompat="@drawable/additional_time_bonus" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="88dp"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Дополнительное \nвремя"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="195dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#E5A1F1"
                android:text="Подробнее"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/sweet_cloud_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/additional_time_card"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/grey"
            android:clickable="true"
            app:cardCornerRadius="10dp"
            app:strokeColor="@color/grey"
            app:strokeWidth="2dp">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:padding="20dp"
                app:srcCompat="@drawable/sweet_clouds_2" />

            <TextView
                android:id="@+id/textView201"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="88dp"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/roboto_bold"
                android:text=" Мастеркласс \n      по созданию    \n сладкой ваты"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <Button
                android:id="@+id/button45"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="195dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#AFF48A"
                android:text="Подробнее"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="@color/white"
            android:layout_alignParentBottom="true"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginBottom="10dp"
            android:text="Продолжить" />
    </RelativeLayout>
</RelativeLayout>