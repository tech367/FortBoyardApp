<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/textView48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Настройки аккаунта"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView48"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_card"
        android:backgroundTint="@color/light_grey">

        <RelativeLayout
            android:id="@+id/relativeLayout5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#00C44ED8">

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/email_set" />

            <TextView
                android:id="@+id/textViewEmailSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView18"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/imageView18"
                android:fontFamily="@font/roboto_regular"
                android:paddingVertical="1dp"
                android:text="postikaartem4@gmail.com"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/imageView18"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/phone_set" />

            <TextView
                android:id="@+id/textViewNumberSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView19"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/imageView19"
                android:fontFamily="@font/roboto_regular"
                android:padding="1dp"
                android:text="+7-901-390-30-58"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/imageView19"
                android:layout_marginVertical="30dp"
                app:srcCompat="@drawable/profile_set" />

            <TextView
                android:id="@+id/textViewNameSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView20"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/imageView20"
                android:fontFamily="@font/roboto_regular"
                android:padding="1dp"
                android:text="Артём"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <ImageView
                android:id="@+id/imageViewSetEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/textViewEmailSet"
                app:srcCompat="@drawable/edit" />

            <ImageView
                android:id="@+id/imageViewSetPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageViewSetEmail"
                android:layout_alignEnd="@+id/imageViewSetEmail"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="0dp"
                app:srcCompat="@drawable/edit" />

            <ImageView
                android:id="@+id/imageViewSetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageViewSetPhone"
                android:layout_alignEnd="@+id/imageViewSetPhone"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="0dp"
                app:srcCompat="@drawable/edit" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>