<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".BasketActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="5dp"
        android:textAllCaps="false"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/roboto_bold"
        android:backgroundTint="@color/white"
        android:textSize="16sp"
        android:text="Подтвердить" />

    <RelativeLayout
        android:id="@+id/relativeLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/custom_card"
        android:backgroundTint="@color/light_grey">

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Подтверждение"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView25"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_card"
            android:backgroundTint="@color/grey">

            <RelativeLayout
                android:id="@+id/relativeLayout6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="#00C44ED8">

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    app:srcCompat="@drawable/user_count" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView21"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@+id/imageView21"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="1dp"
                    android:text="25 человек"
                    android:textColor="@color/white"
                    android:textSize="19sp" />

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView21"
                    android:layout_marginTop="30dp"
                    app:srcCompat="@drawable/age" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView22"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@+id/imageView22"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="1dp"
                    android:text="9-11 лет"
                    android:textColor="@color/white"
                    android:textSize="19sp" />

                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView22"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/white"
                    app:srcCompat="@drawable/date" />

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView23"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@+id/imageView23"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="1dp"
                    android:text="05.07.2024"
                    android:textColor="@color/white"
                    android:textSize="19sp" />

                <ImageView
                    android:id="@+id/imageView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView23"
                    android:layout_marginTop="30dp"
                    app:srcCompat="@drawable/time" />

                <TextView
                    android:id="@+id/textView33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView24"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@+id/imageView24"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="1dp"
                    android:text="12:00"
                    android:textColor="@color/white"
                    android:textSize="19sp" />

                <ImageView
                    android:id="@+id/imageView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView24"
                    android:layout_marginTop="30dp"
                    app:srcCompat="@drawable/user_gift" />

                <TextView
                    android:id="@+id/textView34"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView25"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@+id/imageView25"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="1dp"
                    android:text="Дополнительное время"
                    android:textColor="@color/white"
                    android:textSize="19sp" />

                <ImageView
                    android:id="@+id/imageView26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView25"
                    android:layout_marginTop="30dp"
                    app:srcCompat="@drawable/type" />

                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView26"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@+id/imageView26"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="1dp"
                    android:text="Выпускной"
                    android:textColor="@color/white"
                    android:textSize="19sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout6"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_card"
                android:backgroundTint="@color/light_grey"
                android:paddingVertical="20dp">

                <TextView
                    android:id="@+id/textView37"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Итого:"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textView38"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView37"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@+id/textView37"
                    android:fontFamily="@font/roboto_bold"
                    android:text="27 450 р."
                    android:textColor="@color/yellow_highligt"
                    android:textSize="30sp" />
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout7"
        android:layout_marginHorizontal="5dp"
        android:paddingVertical="20dp"
        android:background="@drawable/custom_card"
        android:backgroundTint="@color/light_grey">

        <TextView
            android:id="@+id/textView39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="30dp"
            android:fontFamily="@font/roboto_regular"
            android:text="В течение 20 минут с вами свяжется наш менеджер для окончательного подтверждения заявки."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </RelativeLayout>
</RelativeLayout>